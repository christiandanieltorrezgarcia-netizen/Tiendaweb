<h2>Lista de Productos</h2>

<table>
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Marca</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Descripci√≥n</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Productos)
    {
        <tr>
            <td>@item.Nombre</td>
            <td>@item.Marca</td>
            <td>@item.Precio</td>
            <td>@item.Stock</td>
